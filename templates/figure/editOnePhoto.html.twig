{% extends 'base.html.twig' %}

{% block title %}Edit One Photo{% endblock %}

{% block body %}
<div class="container">


    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-6">
            <img src="{{ asset('uploads/photos/' ~ photo) }}" class="img-thumbnail img-fluid" alt="...">
        </div>

        <div class="col-sm-6">
            <p>

                {{ form_row(form.file, {'attr': {'placeholder': "image"}}) }}
            </p>
            <p>

                <button class="btn btn-primary btn-sm btn-block">{{ button_label|default('Validate') }}</button>
            </p>

        </div>

    </div>
    {{ form_end(form) }}

</div>
    <a class="btn btn-secondary btn-sm" href="{{ path('figure_edit', {'id': figure.id}) }}">Back</a>

{% endblock %}