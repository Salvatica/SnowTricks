{% extends 'base.html.twig' %}

{% block title %}Edit One Video{% endblock %}

{% block body %}

    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-6">

                {{ form_row(form.fileName, {'attr': {'placeholder': "lien youtube"}}) }}

                <div class="d-flex align-items-end">
                    <button class="btn btn-primary btn-sm">{{ button_label|default('Validate') }}</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    <a class="btn btn-secondary btn-sm" href="{{ path('figure_edit', {'slug': figureVideo.figure.slug}) }}">Back</a>
{% endblock %}