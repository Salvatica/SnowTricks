{% extends 'base.html.twig' %}

{% block body %}

    <h3>Inscription sur le site</h3>

    {{ form_start(form) }}
    <div class="container">
        <div class="row">
        <div class="col-md-6">
    {{ form_row(form.name, {'label':'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
    {{ form_row(form.email, {'label': 'adresse mail', 'attr': {'placeholder': 'Saisissez votre adresse email'}}) }}
    {{ form_row(form.plainPassword) }}
    </div>

    </div>
        <button type="submit" class="btn btn-success">Inscription !</button>
    </div>
    {{ form_end(form) }}

{% endblock %}