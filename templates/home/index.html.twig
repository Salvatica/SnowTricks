{% extends 'base.html.twig' %}

{% block title %}Figure index{% endblock %}

{% block body %}
    <main role="main">
        <!-- JUMBOTRON -->
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Snow Tricks</h1>
                <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its
                    parent.</p>
                <div class="navarrow bottomright text-white"><a class="anchor-scroll" href="#trick"
                                                                data-class-to="trick" data-on-scroll="blur-effect"><i
                                class="fas fa-arrow-circle-down"></i></a></div>
            </div>
        </div><!-- END JUMBOTRON -->

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        <!-- LISTE FIGURES -->
        <div class="trick py-5 bg-light" id="trick">

            <div class="container-fluid all-figures">
                {% for figure in figures %}
                    {% if loop.index0 % 4 == 0 %}<div class="row row-figure">{% endif %}
                    <div class="col-md-3"><!-- FIGURE -->
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="{{ asset('images/exemple.jpeg') }}" alt="Card image cap">

                            <div class="card-body">

                                <div class="d-flex justify-content-between align-items-center">
                                    <strong><a href="{{ path('figure_show', {'id': figure.id}) }}">{{ figure.name }}</a></strong>

                                    <span><a href="{{ path('figure_edit', {'id': figure.id}) }}"><i
                                                    class="far fa-edit"></i></a>

                                            <a href="#deleteModal" role="button" class="btn">
                                                <i class="fas fa-trash-alt" data-toggle="modal"
                                                   data-target="#deleteModal"
                                                   data-href="{{ path('figure_delete', {'id': figure.id, '_token': csrf_token('delete'~figure.id)}) }}"></i>
                                            </a>

                                        </span>
                                </div>
                            </div>
                        </div>
                    </div><!-- END FIGURE -->
                    {% if loop.index0 % 4 == 3 or loop.last %}  </div>{% endif %} <!-- END ROW FIGURE-->
                {% endfor %}
            </div> <!-- END CONTAINER FIGURE-->
        </div>

            <p class="float-right">
                <a class="anchor-scroll floatnav-bottom floatnav btn-floating btn-lg btn-flat" href="#navbarHeader"
                   data-class-to="navbarHeader" data-on-scroll="blur-effect"><i
                            class="fas fa-arrow-circle-up navarrow my-floatnav"></i></a>
            </p>
        </div><!-- END LISTE FIGURES -->

    </main>

    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Suppression</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Etes vous sur de vouloir supprimer ce Trick ?</p>
                    <p class="debug-url"></p>

                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>


                    <a type="button" href="" class="btn btn-danger btn-ok">Delete</a>


                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center"><!-- bouton load more lien js-->
        <div class="col-2">
            <a class="btn btn-outline-primary mb-4" href="#loadMore" id="loadMore">Load More</a>
        </div>
    </div>
    </div>
{% endblock %}

{% block custom_scripts %}
    <script type="text/javascript">
        $('#deleteModal').on('show.bs.modal', function (e) {
            console.log(e.relatedTarget);

            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));

            $('.debug-url').html('Delete URL:  <strong>' + $(this).find('.btn-ok').attr('href') + '</strong>');
        });
        $('.row-figure').hide();

        function showMoreFigure() {
            $('.row-figure:hidden:first').fadeIn();
        }
        showMoreFigure();
        showMoreFigure();
        showMoreFigure();

        $(function ()

        {
            $("#loadMore").on('click', function (e) {
                e.preventDefault();
                showMoreFigure()
                $(this).toggle(showMoreFigure)
            });
        });


    </script>
{% endblock %}
